<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/splash"
    android:fillViewport="true"
    android:alpha="0.6"
    android:scrollbars="none" 
    
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="20dip"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_text"
                android:padding="10dip"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editTextUsername1tim"
                    style="@style/MyTextViewStyleLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:hint="@string/text5"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@color/error"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/UsernameError"
                    style="@style/MyErrorStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="error"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="@dimen/layout_margin_text"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editTextPhone1tim"
                    style="@style/MyTextViewStyleLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:hint="@string/text4"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/dividerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="8dip"
                    android:background="@color/error"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/PhoneError"
                    style="@style/MyErrorStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="error"
                    android:visibility="gone" />
            </LinearLayout>
            <Button
            android:id="@+id/buttonRegister1tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="@string/buttonReg"
                android:padding="6dip"
                android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_margin="20dip"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:typeface="serif" />
        </LinearLayout>


</ScrollView>
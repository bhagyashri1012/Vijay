<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_text"
        android:text="@string/textverfi"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:typeface="serif" />

    <EditText
        android:id="@+id/editTextOtp"
        style="@style/MyTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:layout_margin="@dimen/layout_margin_text"
        android:gravity="center"
        android:inputType="number" />

    <vijay.education.academylive.viewPager.ButtonRectangle
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/primary"
        android:padding="12dp"
        android:text="@string/buttonConfirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
           android:textAllCaps="true"
        android:typeface="serif" />
     <TextView android:id="@+id/timer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:typeface="serif"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"
            android:gravity="center"
            /> 
 <TextView android:id="@+id/link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
             android:text="@string/buttonResend"
            android:textAllCaps="true"
            android:typeface="serif"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:gravity="center"
            />  
</LinearLayout>